  <script>
   let countdownInterval;

        function showModal() {
            const modal = document.getElementById('emergencyModal');
            modal.style.display = 'block';
            let countdown = 5;
            document.getElementById('countdown').innerText = countdown;
            countdownInterval = setInterval(() => {
                countdown--;
                document.getElementById('countdown').innerText = countdown;
                if (countdown === 0) {
                    clearInterval(countdownInterval);
                    proceedToCall();
                }
            }, 1000);
        }

        function cancelCall() {
            clearInterval(countdownInterval);
            const modal = document.getElementById('emergencyModal');
            modal.style.display = 'none';
        }

        function proceedToCall() {
            const modal = document.getElementById('emergencyModal');
            modal.style.display = 'none';
            const callingScreen = document.getElementById('callingScreen');
            callingScreen.style.display = 'block';
            // Simulate calling and fetching data
            setTimeout(() => {
                callingScreen.style.display = 'none';
                showRespondersInfo();
            }, 3000);
        }

        function showRespondersInfo() {
            const respondersInfo = document.getElementById('responders-info');
            respondersInfo.innerHTML = `
                <p><strong>Name:</strong> Dr. Jane Smith</p>
                <p><strong>Background:</strong> Experienced emergency responder with 10 years of service.</p>
            `;
            // Simulate showing responders' real-time location
            const respondersMap = document.getElementById('responders-map');
            respondersMap.innerHTML = '<p>Responders are on their way...</p>';
        }

        // Simulate fetching user's current location and nearest hospitals
        function initMap() {
            const map = document.getElementById('map');
            map.innerHTML = '<p>Your current location is being tracked...</p>';
            const hospitalsList = document.getElementById('hospitals-list');
            hospitalsList.innerHTML = `
                <li>Hospital A - 1.2 km away</li>
                <li>Hospital B - 2.5 km away</li>
                <li>Hospital C - 3.1 km away</li>
            `;
        }

        window.onload = initMap;
  </script>
